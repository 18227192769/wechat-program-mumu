/* pages/cityWeather/cityWeather.wxss */
.wrapper {
    padding: 10rpx;
}
.wrapper .weather {
    position: relative;
    width: 100%;
    height: 1150rpx;
    padding: 20rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
    background-image: linear-gradient(to top, rgb(71, 188, 218) 0%, rgb(187, 228, 230) 100%); 
}
.temperature {
    position: absolute;
    right: 50rpx;
    width: 150rpx;
    height: 150rpx;
    border: 4rpx solid rgb(255, 255, 255);
    text-align: center;
    line-height: 150rpx;
    border-radius: 50%;
    font-size: 40rpx;
    color: rgb(66, 66, 66);
    box-shadow: 0 0 10rpx 0 rgb(234, 255, 116);
}
.GPS .local {
    font-size: 60rpx;
    color: #fff;
}
.GPS .time {
    margin-left: 20rpx;
    color: rgb(240, 240, 240);
}

.ganmao {
    width: 500rpx;
    margin: 20rpx 0;
    font-size: 26rpx;
    color: rgb(61, 61, 61);
    margin-top: 50rpx;
}
.ganmao .title {
    color: rgb(246, 253, 188)
}

.selectBox {
    display: flex;
}
.selectBox button {
    width: 250rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    background-color: rgb(250, 255, 255);
}


.futureDay_item {
    padding: 5rpx;
    border: 3rpx solid rgb(221, 221, 221);
    border-radius: 10rpx;
    margin-top: 10rpx;
}
.futureDay_item .info {
    font-size: 26rpx;
    margin-left: 30rpx;
}

.yesterday {
    padding: 10rpx;
    border: 3rpx solid rgb(221, 221, 221);
    border-radius: 10rpx;
    margin-top: 10rpx;
}
.yesterday .info {
    font-size: 26rpx;
    margin-left: 30rpx;
    margin-top: 10rpx;
    padding: 10rpx;
    border-radius: 20rpx;
    background-image: linear-gradient(to right, rgb(255, 255, 255) 0%, rgb(230, 230, 230) 100%);
    background-color: rgb(255, 255, 255);
    box-sizing: border-box
}